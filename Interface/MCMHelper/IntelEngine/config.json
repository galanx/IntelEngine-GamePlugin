    {
      "pageDisplayName": "Settings",
      "content": [
        {
          "id": "headerGeneral",
          "type": "header",
          "text": "General Settings"
        },
        {
          "id": "bDebugMode:Settings",
          "type": "toggle",
          "text": "Debug Mode",
          "help": "Enable debug notifications and logging.",
          "valueOptions": {
            "sourceType": "GlobalVariable",
            "sourceForm": "IntelEngine.esp|801"
          }
        },
        {
          "id": "iMaxTasks:Settings",
          "type": "slider",
          "text": "Max Concurrent Tasks",
          "help": "Maximum number of NPCs that can be on tasks at once. Default: 5",
          "valueOptions": {
            "sourceType": "GlobalVariable",
            "sourceForm": "IntelEngine.esp|802",
            "min": 1,
            "max": 5,
            "step": 1,
            "formatString": "{0}"
          }
        },
        {
          "id": "fDefaultWait:Settings",
          "type": "slider",
          "text": "Default Wait Hours",
          "help": "How long NPCs wait at destinations before returning. Default: 2 hours",
          "valueOptions": {
            "sourceType": "GlobalVariable",
            "sourceForm": "IntelEngine.esp|803",
            "min": 0.5,
            "max": 24,
            "step": 0.5,
            "formatString": "{1} hours"
          }
        },
        {
          "type": "empty"
        },
        {
          "id": "headerTravel",
          "type": "header",
          "text": "Travel Settings"
        },
        {
          "id": "iTravelConfirmMode:Settings",
          "type": "enum",
          "text": "NPC Travel Confirmation",
          "help": "Allow: NPCs travel freely. Prompt: Ask player before NPC travels. Deny: Silently block all NPC travel.",
          "valueOptions": {
            "sourceType": "ModSettingInt",
            "options": ["Allow", "Prompt", "Deny Silently"],
            "defaultValue": 0
          }
        },
        {
          "id": "bAllowTeleport:Settings",
          "type": "toggle",
          "text": "Allow Emergency Teleport",
          "help": "If enabled, NPCs can teleport if they get truly stuck (after timeout). Disabled by default for immersion.",
          "valueOptions": {
            "sourceType": "GlobalVariable",
            "sourceForm": "IntelEngine.esp|804",
            "defaultValue": 0
          }
        },
        {
          "id": "fStuckTimeout:Settings",
          "type": "slider",
          "text": "Stuck Detection Timeout",
          "help": "Seconds an NPC must be stuck before attempting recovery. Default: 30",
          "valueOptions": {
            "sourceType": "GlobalVariable",
            "sourceForm": "IntelEngine.esp|805",
            "min": 10,
            "max": 120,
            "step": 5,
            "formatString": "{0} seconds"
          }
        }
      ]
